<nav class="du-dock du-dock-lg lg:hidden sticky bottom-0 border-t border-base-content/20 bg-base-300">
  <% if current_organization %>
    <%= active_link_to organization_dashboard_path(@current_organization), class_active: "du-dock-active", class: "" do %>
      <%= inline_svg_tag "svg/home.svg", class: "size-[1.2em]" %>
      <span class="du-dock-label">Dashboard</span>
    <% end %>

    <%= active_link_to organization_subscriptions_path(@current_organization), class_active: "du-dock-active", class: "" do %>
      <%= subscription_status_label(@current_organization) %>
      <span class="du-dock-label"><%= t("organizations.subscriptions.index.title") %></span>
    <% end %>
  <% else %>
    <%= active_link_to organizations_path, active: :exclusive, class_active: "du-dock-active", class: "" do %>
      <%= inline_svg_tag "svg/globe-europe-africa.svg", class: "size-[1.2em]" %>
      <span class="du-dock-label"><%= t("organizations.index.title") %></span>
    <% end %>
  <% end %>
</nav>
