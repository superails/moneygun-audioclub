<% if book.payload %>
  <% book_data = book.payload %>
  
  <!-- Hero Section -->
  <div class="rounded-2xl shadow-xl overflow-hidden mb-8">
    <div class="grid lg:grid-cols-2 gap-8 p-8">
      <!-- Book Cover -->
      <div class="flex justify-center lg:justify-start">
        <div class="relative group">
          <%= image_tag book.thumbnail_url, 
              class: "h-96 w-auto rounded-lg shadow-2xl transition-transform duration-300 group-hover:scale-105",
              alt: book_data["title"] if book.thumbnail_url.present? %>
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
      </div>
      
      <!-- Book Info -->
      <div class="space-y-6">
        <div>
          <h1 class="text-4xl font-bold mb-2"><%= book_data["title"] %></h1>
          <% if book_data["authors"]&.any? %>
            <p class="text-xl  mb-4">
              by <%= book_data["authors"].join(", ") %>
            </p>
          <% end %>
        </div>
        
        <!-- Categories/Genres -->
        <% if book_data["categories"]&.any? %>
          <div class="flex flex-wrap gap-2">
            <% book_data["categories"].each do |category| %>
              <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
                <%= category %>
              </span>
            <% end %>
          </div>
        <% end %>
        
        <!-- Key Details -->
        <div class="grid grid-cols-2 gap-4 text-sm">
          <% if book_data["page_count"] %>
            <div class="bg-base-100 p-3 rounded-lg">
              <span class="font-semibold ">Pages:</span>
              <span class=""><%= book_data["page_count"] %></span>
            </div>
          <% end %>
          <% if book_data["language"] %>
            <div class="bg-base-100 p-3 rounded-lg">
              <span class="font-semibold ">Language:</span>
              <span class=""><%= book_data["language"].upcase %></span>
            </div>
          <% end %>
        </div>
        
        <!-- Action Button -->
        <% if book_data["info_link"] %>
          <%= link_to book_data["info_link"], 
              class: "du-btn du-btn-primary",
              target: "_blank", rel: "noopener" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253z"></path>
            </svg>
            View on Google Books
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Description Section -->
  <% if book_data["description"] %>
    <div class="rounded-2xl shadow-xl p-8 mb-8">
      <h2 class="text-2xl font-bold mb-4">About This Book</h2>
      <div class="prose prose-lg max-w-none leading-relaxed dark:prose-invert">
        <%= simple_format(book_data["description"]) %>
      </div>
    </div>
  <% end %>
  
  <!-- Additional Details -->
  <div class="rounded-2xl shadow-xl p-8">
    <h2 class="text-2xl font-bold mb-6">Book Details</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if book_data["isbn_10"] %>
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold mb-2">ISBN-10</h3>
          <p class="font-mono"><%= book_data["isbn_10"] %></p>
        </div>
      <% end %>
      
      <% if book_data["isbn_13"] %>
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold mb-2">ISBN-13</h3>
          <p class="font-mono"><%= book_data["isbn_13"] %></p>
        </div>
      <% end %>
      
      <% if book_data["language"] %>
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold mb-2">Language</h3>
          <p class="capitalize"><%= book_data["language"] %></p>
        </div>
      <% end %>
      
      <% if book_data["page_count"] %>
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold mb-2">Page Count</h3>
          <p class=""><%= book_data["page_count"] %> pages</p>
        </div>
      <% end %>
      
      <% if book_data["authors"]&.any? %>
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold mb-2">Author<%= book_data["authors"].length > 1 ? 's' : '' %></h3>
          <p class=""><%= book_data["authors"].join(", ") %></p>
        </div>
      <% end %>
      
      <% if book_data["categories"]&.any? %>
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold mb-2">Categories</h3>
          <p class=""><%= book_data["categories"].join(", ") %></p>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <!-- Fallback for books without payload data -->
  <div class="rounded-2xl shadow-xl p-8 text-center">
    <h1 class="text-3xl font-bold mb-4"><%= book.title %></h1>
    <p class="">Book details are being loaded...</p>
  </div>
<% end %>
